<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">    
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/dolgozoszamInput"
        android:hint="Dolgozószám"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
         <TextView android:id="@+id/dolgozoNevText"
            android:hint="Név"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText android:id="@+id/vonalkodInput"
        android:hint="Vonalkód"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
         <TextView android:id="@+id/mlTetelAzText"
            android:hint="MlTetelAZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
     

    <EditText android:id="@+id/darabszamInput"
        android:hint="Darabszám"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/selejtInput"
        android:hint="Selejt"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/megjegyzesInput"
        android:hint="Megjegyzes" 
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/saveButton"
        android:text="Feladás"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>